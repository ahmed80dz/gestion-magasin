<% if div %>
  <div id="produit_<%= produit.id %>" class="produit">
<% end %>

<div class="edit_tools">
  <div><%= produit.nom %></div>
  <% if can? :update, produit %>
  <%= link_to (image_tag("icon/page_white_edit.png",:alt => "Editer",:title =>"Editer")), edit_produit_path(produit), :remote => true %>
  <% end %>
  <% if can? :delete, produit %>
  <%= link_to (image_tag("icon/page_white_delete.png",:alt => "Effacer",:title =>"Effacer")), produit, :confirm => 'Are you sure?', :method => :delete,:remote => true %>
  <% end %>
</div>
<div class="info_prod" >
  <div>Ref: <%= produit.ref %></div>
  <div>Prix: <%=number_to_currency  produit.prix  %></div>
</div>
<% if div %>
</div>
<% end %>

